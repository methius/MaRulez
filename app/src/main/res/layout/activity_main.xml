<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="100" android:id="@+id/listView"
            android:dividerHeight="0px" android:background="#ffffff" android:divider="#ffffff"/>

    <Button
            android:text="Make New Rulez!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="116dp"
            tools:layout_editor_absoluteX="93dp" android:id="@+id/button" android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

</LinearLayout>