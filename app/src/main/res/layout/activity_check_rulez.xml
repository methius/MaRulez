<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CheckRulezActivity">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/listView2" android:layout_weight="1"
            android:dividerHeight="0px" android:background="#ffffff" android:divider="#ffffff"/>
    <Button
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button8" android:layout_weight="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Button
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button9" android:layout_weight="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Button
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button7" android:layout_weight="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
</LinearLayout>